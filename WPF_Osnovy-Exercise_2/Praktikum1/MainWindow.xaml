<Window x:Class="Praktikum1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Praktikum1"
        mc:Ignorable="d"
        Title="Главное окно" Height="350" Width="500">
    <Grid>
        <Label Target="{Binding ElementName=TextBoxName}" Margin="170,10,176.6,272.8" Content="Введите своё имя" FontSize="16" Background="#00000000"/>
        <TextBox
            TextWrapping="Wrap"
            AcceptsReturn="True"
            AcceptsTab="True"
            x:Name="TextBoxName"
            Margin="170,53,176.6,239.8" 
        />
        <Button
            Content="Ок"
            HorizontalAlignment="Left"
            Margin="170,104,0,0"
            VerticalAlignment="Top"
            Width="147" Click="Button_Click"
        />
    </Grid>
</Window>
